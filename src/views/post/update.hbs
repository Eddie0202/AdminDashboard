<style>
    .post-image {
      max-width: 250px;
      max-height: 250px;
      width: auto;
      height: auto;
    }
    
    /* Các kiểu dáng khác cho bảng và ô chứa hình ảnh */
    .table {
      /* Các thuộc tính CSS cho bảng */
    }
    
    .image-container {
      /* Các thuộc tính CSS cho ô chứa hình ảnh */
    }
  </style>
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    {{>menu}}
    <div class="layout-page">
      {{>header}}
      <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
          <!-- Bordered Table -->
          <div class="card">
            <div class="card-header">
                <div class="d-sm-flex justify-content-between align-items-start">
                    <h4 class="fw-bold"><span class="text-muted fw-light">Management /</span> Posts/Edit Post</h4>

                    
                </div>

                <div class="col-md-12">
                    <div class="card mb-4">
                    <h5 class="card-header">Edit Selected Post</h5>
                    <div class="card-body">
                        <form method="POST" id="updatePostForm" action="/posts/update/{{post.id}}" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input
                            type="text"
                            class="form-control"
                            id="title"
                            name="title"
                            placeholder="Enter Title Post"
                            value="{{post.title}}"
                            />
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="shortDescription" name="shortDescription" rows="3">{{post.shortDescription}}</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="postLink" class="form-label">Post Link</label>
                            <input
                            type="text"
                            class="form-control"
                            id="postLink"
                            name="postLink"
                            placeholder="Enter Post Link"
                            value="{{post.postLink}}"
                            />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Image</label>
                            {{!-- {{#if post.imgLink}}
                                <img src="{{ post.imgLink }}" alt="Post Image" style="max-width: 10%; margin-top: 10px;">
                            {{/if}} --}}
                            <input
                            type="file"
                            class="form-control"
                            id="image"
                            name="image"
                            accept="image/*"
                            />
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
                </div>
            </div>

            
            
            
            </div>
          <!--/ Bordered Table -->
        </div>
        
        <!-- / Content -->
      </div>
    </div>
  </div>
</div>

<script>
  new DataTable('#myTable');
</script>